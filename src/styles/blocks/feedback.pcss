.feedback {
  padding: 160px 0;
  @include desktop {
    padding: 100px 30px;
  }
}

.feedback__btn {
  font-size: 18px;
  font-weight: 600;
  padding: 33px 120px;
  text-transform: uppercase;
  background-image: linear-gradient(to top, #ea7400, #f29400);
  color: #fff;
  &:hover {
    background-image: linear-gradient(to top, #ff7f00, #ff9d00);
  }
  
}
.form__row .feedback__btn {
  @include tablets {
   margin: 0 auto;
  }
}

.feedback__title {
  font-size: 36px;
  font-weight: bold;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.33;
  letter-spacing: normal;
  text-align: left;
  margin-bottom: 90px;
  @include tablets {
    text-align: center;
  }
}

.form__wrapper {
  width: 60%;
  @include desktop {
    width: 75%;
  }
  @include tablets {
    width: 100%;
  }
}

.form__content {
  display: flex;
  flex-direction: column;
}

.form__row {
  display: flex;
  margin-bottom: 60px;
  height: 100%;
}

.form__textarea {
  width: 100%;
  resize: none;
  background: none;
  overflow: hidden;
}

.form__input:focus{
  /* outline: 1px solid #ff9a00 ; */
}
.form__row--one {
  @include phones {
  display: flex;
  flex-direction: column;
  align-items: center;
  }
}

.form__label {
  flex: 1;
  margin-right: 80px;
  @include phones {
    margin-right: 0;
    width: 100%;
  }
  border-bottom: 1px solid #fff;
  padding-left: 40px;
  position: relative;
  &:hover{
    border-bottom: 1px solid #ff9a00;
  }
  &:after {
    position: absolute;
    bottom: 10px;
    left: -60px;
    content: "";
    display: inline-block;
    width: 30px;
    height: 30px;
    margin-left: 60px;
    background-image: svg-load("user.svg", fill="#fff");
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    opacity: .3;
  }
  &:hover:after{
    background-image: svg-load("user.svg", fill="#ff9a00");
    opacity: 1;
  }
}

.form__label-email {
  flex: 1;
  /* margin-right: 80px; */
  @include phones {
   
    width: 100%;
  }
  border-bottom: 1px solid #fff;
  padding-left: 40px;
  position: relative;
