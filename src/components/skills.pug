script(type="text/x-template")#skills-list
  .advantages__content
    ul.skill-set
      li.skill-set__item(v-for="skill in skills")
        skill-group(
          :skill="skill"
        )
        
              
      
script(type="text/x-template")#skill-group
  .skill-group
    .skill-group__title {{skill.skillGroup}}
    .skill-group__content
      ul.skills__list
        li.skills__item(v-for="(skillPercent, skillName) in skill.skills")
          skill(
            :skillName="skillName"
            :skillPercent="skillPercent"
          )

script(type="text/x-template")#skill                   
  .skill
    svg(viewBox="0 0 200 200" preserveAspectRatio="none").skill__shape
      defs.defs
        linearGradient(x1="0%" y1="50%" x2="100%" y2="100%")#skill-gradient
          stop(offset="60%" stop-color="#d0731b").skill__fill--start
          stop(offset="100%" stop-color="#dc9322").skill__fill--end
      circle(cx="100" cy="100" r="94").skill__circle.skill__circle--under
      circle(cx="100" cy="100" r="94" ref="color-circle" stroke="url(#skill-gradient)" transform="rotate(-180 100 100)").skill__circle.skill__circle--above
    .skill__title {{skillName}}