.tooltip-error {
  display: none;
  position: absolute;
  padding: 10px 20px ;
  background: red;
  top: 100%;
  left: 50px;
  
  &:before {
    content: "";
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translatex(-50%);
    height: 20px;
    border-bottom: 10px solid red;
    border-left: 15px solid transparent;
    border-right: 15px solid transparent;

  }
}
.tooltip-error--visible {
  display: block;
}

