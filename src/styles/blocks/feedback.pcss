  }
  &:hover:after{
    background-image: svg-load("envelope.svg", fill="#ff9a00");
    opacity: 1;
  }
  
}

.form__label-message {
  flex: 1;
  /* margin-right: 80px; */
  border-bottom: 1px solid #fff;
  padding-left: 40px;
  position: relative;
  &:hover{
    border-bottom: 1px solid #ff9a00;
  }
  &:after {
    position: absolute;
    bottom: 40px;
    left: -60px;
    content: "";
    display: inline-block;
    width: 30px;
    height: 30px;
    margin-left: 60px;
    background-image: svg-load("message.svg", fill="#fff");
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    opacity: .3;
  }
  &:hover:after{
    background-image: svg-load("message.svg", fill="#ff9a00");
    opacity: 1;
  }
