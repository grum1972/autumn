.form__label-title {
  display: block;
  font-size: 16px;
  font-weight: 600;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.88;
  letter-spacing: normal;
  opacity: .3;
  margin-left: 10px;
}



.form__input::placeholder {
  font-weight: 300;
  font-size: 18px;
  font-weight: bold;
  font-stretch: normal;
  font-style: normal;
  line-height: 2.67;
  letter-spacing: normal;
  text-align: left;
  color: #fff;
}

.form__textarea::placeholder {
  font-weight: 300;
  font-size: 18px;
  font-weight: bold;
  font-stretch: normal;
  font-style: normal;
  line-height: 1.67;
  letter-spacing: normal;
  text-align: left;
}

.form__input {
  width: 100%;
  border: none;
  background: none;
  padding: 20px 10px;
  color: #fff;
}